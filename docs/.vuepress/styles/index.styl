li.task-list-item {
    list-style-type: none;
}

input.task-list-item-checkbox {
    margin-left: -1.2em;
}


h1 {
    padding-bottom: .4rem;
    font-size: 2.2rem;
    line-height: 1.3;
}

h2 {
    font-size: 1.75rem;
    line-height: 1.225;
    margin: 35px 0 15px;
    padding-bottom: 0.5em;
    border-bottom: 1px solid #ddd;
}

h3 {
    font-size: 1.42rem;
    line-height: 1.43;
    margin: 20px 0 7px;
}

h4 {
    font-size: 1.2rem;
}

h5 {
    font-size: 1rem;
}

h6 {
    font-size: 1rem;
    color: #777;
}
code {
    margin: 0 0.25rem !important;
}

pre code {
    margin: 0 !important;
}

blockquote {
    border-left-color: $blockquoteBorderColor;
    color: #777;
    padding: 1rem 0.5rem 1rem 1rem;
    background-color: $blockquoteBgColor;
}

ul, ol {
    padding-left: 2em;
}

p,
blockquote,
ul,
ol,
dl,
table,
iframe {
    margin: 0.8em 0;
}

li > ul {
    margin: 0;
}